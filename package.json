{
  "name": "hive-backend",
  "packageManager": "npm@10.8.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npx tsx apps/api/src/index.ts",
    "dev:pm": "npx tsx apps/agents/src/pm-agent.ts",
    "dev:dev": "npx tsx apps/agents/src/dev-agent.ts",
    "dev:orchestrator": "npx tsx apps/orchestrator/src/index.ts",
    "dev:trigger-engine": "npx tsx apps/trigger-engine/src/index.ts",
    "dev:bot": "npx tsx apps/telegram-bot/src/index.ts",
    "dev:frontend": "npm run dev --workspace=@hive/frontend",
    "cli": "npx tsx apps/cli/src/index.ts",
    "build": "turbo build"
  },
  "devDependencies": {
    "tsx": "^4.7.1",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "postgres": "^3.4.8"
  }
}
